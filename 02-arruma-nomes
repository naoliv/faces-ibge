# nao é eficiente, mas faz o que precisa fazer; alguns nomes precisam de mais do que uma substituição
def processa(nome):
    for key in trocas:
        nome = re.sub(r'\b%s\b' % key, trocas[key], nome)
    return nome


conexao = psycopg2.connect("dbname=ibge user=user password=pass")
cursor = conexao.cursor()
cursor.execute("SELECT * FROM faces WHERE nome IS NOT NULL")

print "Senta que lá vem história... (é demorado)"

for row in cursor:
    try:
        tmp = row[1].decode('utf-8')
    except:
        pass

    tmp = u' '.join(tmp.split()).title()

    c2 = conexao.cursor()

    if ' Sem ' in tmp or 'Projetad' in tmp:
        # nomes "Sem Nome", "Sem Denominação", "Rua Projetada", etc ficam todos sem nome
        query = c2.mogrify("UPDATE faces SET nome = NULL WHERE ogc_fid = %i" % row[0])
    else:
        query = c2.mogrify("UPDATE faces SET nome = '%s' WHERE ogc_fid = %i" % (processa(tmp), row[0]))

    c2.execute(query)
    conexao.commit()
    c2.close()

conexao.close()
